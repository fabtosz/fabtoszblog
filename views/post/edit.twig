{% extends 'admin/panel.twig' %}

{% block content %}

<h2>Edytuj post</h2>
<hr/>
	<h3 style="background-color: green">{{ flash|raw }}</h3>

    {% for error in errors %}
        <li style="background-color: red">{{ error }}</li>
    {% endfor %}
	
    <form method="post" action="" id="post_form">
		tytuł: <input type="text" name="title" value="{{ post.title}}"><br/>
		treść: <textarea rows="4" cols="50" name="content" form="post_form">{{ post.content}}</textarea><br/>
		autor: <input type="text" name="author" value="{{ post.author }}"><br/>
		kategoria: <input type="text" name="categoryId" value="{{ post.categoryId }}"><br/>
        <input type="submit" value="Aktualizuj">
    </form>
	
	<a href="/admin/posts">
		<button>Wróć</button>
	</a> 



{% endblock %}


